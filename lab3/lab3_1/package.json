{
  "name": "node-frontend-tailwind-html",
  "version": "1.0.0",
  "private": true,
  "description": "Vanilla HTML frontend with Tailwind CSS powered by Node.js tooling (CLI + live server).",
  "scripts": {
    "dev": "concurrently \"npm:css:watch\" \"npm:serve\"",
    "serve": "live-server public --port=5173 --no-browser",
    "css:watch": "tailwindcss -i ./src/styles/input.css -o ./public/assets/tailwind.css --watch",
    "css:build": "tailwindcss -i ./src/styles/input.css -o ./public/assets/tailwind.css --minify",
    "build": "npm run css:build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "live-server": "^1.2.2",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13"
  }
}